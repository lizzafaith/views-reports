= form_for(@tag) do |f|
  .span-12
    - if @tag.errors.any?
      #error_explanation
        %h2
          = pluralize(@tag.errors.count, "error")
          prohibited this tag from being saved:
        %ul
          - @tag.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :name
      %br/
      = f.text_field :name
    .field
      = f.label :name_seo
      %br/
      = f.text_field :name_seo
    .field
      = f.label :descr
      %br/
      = f.text_area :descr
    .field.span-4
      = f.label :is_feature
      %br/
      = f.check_box :is_feature
    .field.span-4
      = f.label :is_public
      %br/
      = f.check_box :is_public
    .field.span-4.last
      = f.label :is_trash
      %br/
      = f.check_box :is_trash
    .clear
  .span-12.last
    .field
      = f.label :parent_id
      %br/
      = select :tag, :parent_id, @parent_tags
    .actions
      = f.submit
