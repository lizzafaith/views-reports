
- unless current_user.blank? || @report.blank? || @report.id.blank?
  - if current_user[:id] == @report[:user_id]
    .admin-links
      = @report[:id]
      %ul.menu
        %li= link_to image_edit, edit_report_path(@report)
        %li= render 'delete', :item => @report
        %li= link_to image_new, new_report_path