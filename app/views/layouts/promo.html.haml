%html
  %head
    %title Infinite Shelter
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"
    :css
      body {
      }
      .container {
        width: 650px;
        margin-left: auto;
        margin-right: auto;
      }
      img.promo {
        
      }
      .center {
        margin-top: auto;
        margin-bottom: auto;
        text-align: center;
      }
      .height-100 {
        height: 100px;
      }
      .top-half {
        overflow: none;
      }
      .bottom-half {
        overflow: auto;
      }
      h2 {
        background: #c9cef0;
        margin: 0 0 5px 0;
        padding: 10px;
        border-top: 5px solid black;
      }
      h2 a {
        text-decoration: none;
        color: black;
      }
      .clear {
        clear: both;
      }
      .float-left {
        float: left;
        width: 310px;
        clear: none;
      }
        :javascript
      $(document).ready(function() {
        var height = $(window).height();
        $('.top-half').height(height/2 - 20 + 'px');
        $('.bottom-half').height(height/2 - 20 + 'px');
        
        var img_margins = ($('.top-half').height() - 200) / 2;
        $('img.promo').css('margin', img_margins +'px 0 '+ img_margins +'px 0' );
        
      });
      
      %body
    .container
      = yield
